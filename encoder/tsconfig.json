{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./build",
    "moduleResolution": "node",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "CommonJS",
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.json", "src/**/*"]
}